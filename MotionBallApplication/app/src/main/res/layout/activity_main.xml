<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnFeedback"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:onClick="UpdateCheck"
        android:text="@string/Main_Feedback"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Main_OtherButton"
        app:layout_constraintStart_toEndOf="@+id/Main_UpdateButton" />

    <Button
        android:id="@+id/main_RecordButton2"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:onClick="ComingSoon"
        android:text="@string/Main_Momentum"
        app:layout_constraintEnd_toEndOf="@+id/main_RecordButton"
        app:layout_constraintStart_toStartOf="@+id/main_RecordButton"
        app:layout_constraintTop_toBottomOf="@+id/main_RecordButton" />

    <Button
        android:id="@+id/main_RecordButton4"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:onClick="ComingSoon"
        android:text="@string/Main_Hookes"
        app:layout_constraintEnd_toEndOf="@+id/Main_RecordButton"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/Main_RecordButton"
        app:layout_constraintTop_toBottomOf="@+id/Main_RecordButton" />

    <Button
        android:id="@+id/main_RecordButton"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:onClick="ComingSoon"
        android:text="@string/Main_PMotion"
        app:layout_constraintBottom_toBottomOf="@+id/Main_RecordButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Main_RecordButton"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/Main_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="89dp"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="89dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="25dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/Main_Title"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Main_TestButton"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:layout_marginEnd="120dp"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="120dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="25dp"
        android:onClick="OpenTest"
        android:text="@string/Main_TestButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Main_Title" />

    <Button
        android:id="@+id/Main_RecordButton"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:onClick="OpenFreeFall"
        android:text="@string/Main_FreeFallButton"
        app:layout_constraintEnd_toStartOf="@+id/main_RecordButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Main_TestButton" />

    <Button
        android:id="@+id/Main_UpdateButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:onClick="UpdateCheck"
        android:text="@string/Main_UpdateButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/Main_OtherButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:onClick="ComingSoon"
        android:text="@string/Main_Other"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>